<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colormain">

    <LinearLayout
        android:id="@+id/ll_ruta"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/vineta"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/circle_green"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/white_opaque"
            android:textStyle="bold"
            android:text="Ruta 1"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/tviewH1"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ll_ruta">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white_opaque"
            android:text="Trasnmetro Eje Sur"
            android:gravity="center"
            android:textSize="14dp"
            android:id="@+id/txtbus" />

        <TextView
            android:id="@+id/txtobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="tomar transmetro Z.10"
            android:textColor="@color/white_opaque"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/white_opaque"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/lblfee"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Valor del pasaje:"
            android:layout_gravity="center_vertical"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/lblfeeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black_opaque"
            android:text="Q. 1.00"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:textSize="16dp"/>
    </LinearLayout>


</RelativeLayout>